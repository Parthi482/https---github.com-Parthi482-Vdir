{
	"pageHeading": "companies",
	"formType": "simple",
	"editMode": "popup",
	"keyField": "_id",
	"isPopupEdit": true,
	"form": {
	  "collectionName": "companies",
	  "type": "companies-input",
	  "fields": [
		{
				  "fieldGroupClassName": "display-flex",
				  "fieldGroup": [
					  {
						  "type": "input",
						  "key": "company_name",
						  "className": "flex-1",
						  "props": {
							  "label": "Company Name",
							  "placeholder": "Company name",
							  "maxLength": 20,
							  "required": true
						  }
					  } 
					  
				  ]
			  } ,
			  {
				"fieldGroupClassName": "display-flex",
				"fieldGroup": [
					{
						"type": "input",
						"key": "company_type",
						"className": "flex-1",
						"props": {
							"label": "Company Type",
							"placeholder": "Company Type",
							"maxLength": 20,
							"required": true
						}
					} ,
					{
						"fieldGroupClassName": "display-flex",
						"fieldGroup": [
							{
								"type": "input",
								"key": "website_link",
								"className": "flex-1",
								"props": {
									"label": "Website Link",
									"placeholder": "Website Link",
									"maxLength": 20,
									"required": true
								}
							} 
							
						]
					} 
					
				]
			} ,
			 
			{
				"fieldGroupClassName": "display-flex",
				"fieldGroup": [
					{
						"type": "input",
						"key": "industry_type",
						"className": "flex-1",
						"props": {
							"label": "Industry Type",
							"placeholder": "Industry Type",
							"maxLength": 20,
							"required": true
						}
					} 
					
				]
			} ,
			{
				"fieldGroup": [
					{
						"type": "input-text-enterkey",
						"key": "client_id",
						"className": "flex-6",
						"props": {
							"label": "Client Id",
							"placeholder": "Client Id",
							"pattern": "^[a-zA-Z0-9-_]*$",
							"valueType":"Dynamic",  "searchableField": true,"searchCollectionName":"client",
							"multifilter_condition": {
								"clause": "AND",
								"conditions": [
								  {
									"column": "client_id",
									"operator": "EQUALS",
									"type": "string",
									"value": ""
								  }
								]
							  },
							"required": true
						},
						 "expressions": {
					   
							"props.readonly": "model.isEdit"
						}
					},
					{
						"type": "input",
						"key": "client_name",
						"className": "flex-6",
						"props": {
							"label": "Client Name",
							"placeholder": "Client Name",
							"pattern": "^[A-Z][a-zA-Z]{2,}?(?: [a-zA-Z]+)*$",
							"required": true
						},
						"expressions": {
					  
						   "props.readonly": "model.isEdit"
					   }
					},
					{
						"type": "select",
						"key": "client_type",
						"className": "flex-6",
						"props": {
							"label": "Client Type",
							"options": [
								{
									"label": "Product",
									"value": "Product"
								},
								{
									"label": "Service",
									"value": "Service"
								},
								{
									"label": "Others",
									"value": "Others"
								}
							],
							"placeholder": "Client Type",
							"required": true
						}
					}
				]
			}
		 
	  ]
	},
	"onCancelRoute": "/list/companies-input"
  }